#include <stdio.h>
#include <stdlib.h>

int main(int argc, char **argv) {
  int n = atoi(argv[1]);
  
  for (int i = 0; i < n; i++) {
    int stars;
    int spaces;

    stars = (i * 2) + 1;
    spaces = (n * 2 - stars) / 2;
    
    for (int x = 0; x < spaces; x++) {
      printf(" ");  
    }
    
    for (int x = 0; x < stars; x++) {
      printf("*");  
    }

    printf("\n");
  }

  return 0;
}
